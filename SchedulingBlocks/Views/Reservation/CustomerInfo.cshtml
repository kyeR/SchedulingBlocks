@{
    ViewBag.Title = "CustomerInfo";
}
<div class="container">
    <div class="row content">
        <div class="col-md-6 col-md-offset-3">
            <form id="customer-info-form" method="POST" data-parsley-validate>
                <div class="form-group">
                    <label>First Name</label>
                    <input id="first-name" name="firstName" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <input id="last-name" name="lastName" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input data-type="phone" id="phone" name="phone" class="form-control" required>
                </div>
                <br/>
                <p class="text-center">Please let us know what sport you will be practicing</p>
                <div class="form-group text-center">
                    <div class="btn-group" data-toggle-name="sport-type" data-toggle="buttons-radio">
                        <button type="button" class="btn btn-info active" data-toggle="button" id="baseball">
                            Baseball
                        </button>
                        <button type="button" class="btn btn-info" data-toggle="button" id="softball">
                            Softball
                        </button>
                    </div>
                    <input type="hidden" name="sport" id="sport" value="Baseball" />
                </div>
                <br/>
                <p>You will recieve a passcode to access the facility via the email address provided below</p>
                <div class="form-group">
                    <label>Email</label>
                    <input data-type="email" name="email" id="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Confirm Email</label>
                    <input data-parsley-equalto="#email" class="form-control" required>
                </div>
                <br/>  
                <br/>  
                <div class="text-center">
                    <button type="submit" class="btn btn-success submit-info">Confirm and Reserve</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#baseball').addClass('active');
        $('#baseball').click(function () {
            $(this).addClass('active');
            $('#softball').removeClass('active');
            $("#sport").val($(this).text());
        });

        $('#softball').click(function () {
            $(this).addClass('active');
            $('#baseball').removeClass('active');
            $("#sport").val($(this).text());
        });
    });
</script>